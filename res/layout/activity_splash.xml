<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/com.citywhisk.citywhisk"
    android:id="@+id/splashPage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rochester3" >

    <!--
        Button
        android:id="@+id/startItinerary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/landingPageAppName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/startitinerary"
        android:scaleX=".75"
        android:scaleY=".75" /
    -->

    <ImageView
        android:id="@+id/landingPageAppName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="170dp"
        android:adjustViewBounds="true"
        android:background="#45000000"
        android:contentDescription="@string/app_name"
        android:paddingBottom="20dp"
        android:paddingTop="20dp"
        android:src="@drawable/landing_logo" />

    <!--
        TextView
        android:id="@+id/login1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:text="@string/login_citywhisk"
        android:textSize="28sp"
        android:color="#ffffff"
        android:background="#66000000"
        android:paddingLeft="10dp"
        android:paddingBottom="2dp"
        android:paddingRight="10dp"
        android:paddingTop="2dp" /
    -->

    <fr.castorflex.android.smoothprogressbar.SmoothProgressBar
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/smoothProgressBar1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:indeterminate="true"
        app:spb_color="#d3d3d3"
        app:spb_interpolator="spb_interpolator_linear"
        app:spb_mirror_mode="false"
        app:spb_reversed="false"
        app:spb_sections_count="3"
        app:spb_speed="1"
        app:spb_stroke_separator_length="2dp"
        app:spb_stroke_width="6dp" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/smoothProgressBar1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:background="#65000000"
        android:gravity="center"
        android:text="@string/generating"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#d3d3d3" />

</RelativeLayout>