<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/prefPage"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#101010" >
    
    <RelativeLayout
        android:id="@+id/budgetGroup"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".2"
        android:layout_marginTop="2dp" >
        
        <TextView android:id="@+id/budgetBarText"
	        android:text="@string/budgetBar"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="15dp"
	        android:textSize="20sp"
	        android:textColor="#FFFFFF" />
    
	    <SeekBar android:id="@+id/budgetBar"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:max="500"
	        android:layout_marginLeft="15dp"
	        android:layout_marginTop="6dp"
	        android:layout_marginRight="15dp"
	        android:layout_below="@id/budgetBarText"
	        android:progressDrawable="@xml/progress_drawable"
	        android:thumb="@xml/slider_drawable"
	        android:thumbOffset="0dp" />
	    
	    <TextView android:id="@+id/budgetBarCurrent"
	        android:layout_width="wrap_content"
	        android:layout_marginRight="15dp"
	        android:layout_alignParentRight="true"
	        android:layout_alignBottom="@id/budgetBarText"
	        android:layout_height="wrap_content"
	        android:gravity="right"
	        android:textAlignment="textEnd"
	        android:textSize="15sp"
	        android:textColor="#FFFFFF" />
	    
	    <LinearLayout
	       android:id="@+id/budgetScale"
	       android:layout_width="fill_parent"
	       android:layout_height="wrap_content"
	       android:layout_below="@id/budgetBar"
	       android:orientation="horizontal"
	       android:weightSum="4" >
	        
	       <TextView
	           android:layout_width="0dp"
	           android:layout_height="wrap_content"
	           android:layout_weight="1"
	           android:gravity="center_horizontal"
	           android:text="$0"
	           android:textSize="12sp"
	           android:textColor="#5E5E5E" />
	       
	       <TextView
	           android:layout_width="0dp"
	           android:layout_height="wrap_content"
	           android:layout_weight="1"
	           android:gravity="center_horizontal"
	           android:text="$200"
	           android:textSize="12sp"
	           android:textColor="#5E5E5E" />
	       
	       <TextView
	           android:layout_width="0dp"
	           android:layout_height="wrap_content"
	           android:layout_weight="1"
	           android:gravity="center_horizontal"
	           android:text="$1000"
	           android:textSize="12sp"
	           android:textColor="#5E5E5E" />
	       
	       <TextView
	           android:layout_width="0dp"
	           android:layout_height="wrap_content"
	           android:layout_weight="1"
	           android:gravity="center_horizontal"
	           android:text="$2500"
	           android:textSize="12sp"
	           android:textColor="#5E5E5E" />
	        
	    </LinearLayout>
        
    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/distanceGroup"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".2" >
        
        <TextView android:id="@+id/distanceBarText"
	        android:text="@string/distanceBar"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="15dp"
	        android:textSize="20sp"
	        android:textColor="#FFFFFF" />
	    
	    <SeekBar android:id="@+id/distanceBar"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:max="200"
	        android:layout_marginLeft="15dp"
	        android:layout_marginTop="6dp"
	        android:layout_marginRight="15dp"
	        android:layout_below="@id/distanceBarText"
	        android:progressDrawable="@xml/progress_drawable"
	        android:thumb="@xml/slider_drawable"
	        android:thumbOffset="0dp"  />
	    
	    <TextView android:id="@+id/distanceBarCurrent"
	        android:layout_width="wrap_content"
	        android:layout_marginRight="15dp"
	        android:layout_alignParentRight="true"
	        android:layout_alignBottom="@id/distanceBarText"
	        android:layout_height="wrap_content"
	        android:gravity="right"
	        android:textAlignment="textEnd"
	        android:textSize="15sp"
	        android:textColor="#FFFFFF" />
	    
	    <LinearLayout
	       android:id="@+id/distanceScale"
	       android:layout_width="fill_parent"
	       android:layout_height="wrap_content"
	       android:layout_below="@id/distanceBar"
	       android:orientation="horizontal"
	       android:weightSum="4" >
	        
	       <TextView
	           android:layout_width="0dp"
	           android:layout_height="wrap_content"
	           android:layout_weight="1"
	           android:gravity="center_horizontal"
	           android:text=".25mi"
	           android:textSize="12sp"
	           android:textColor="#5E5E5E" />
	       
	       <TextView
	           android:layout_width="0dp"
	           android:layout_height="wrap_content"
	           android:layout_weight="1"
	           android:gravity="center_horizontal"
	           android:text="2mi"
	           android:textSize="12sp"
	           android:textColor="#5E5E5E" />
	       
	       <TextView
	           android:layout_width="0dp"
	           android:layout_height="wrap_content"
	           android:layout_weight="1"
	           android:gravity="center_horizontal"
	           android:text="10mi"
	           android:textSize="12sp"
	           android:textColor="#5E5E5E" />
	       
	       <TextView
	           android:layout_width="0dp"
	           android:layout_height="wrap_content"
	           android:layout_weight="1"
	           android:gravity="center_horizontal"
	           android:text="50mi"
	           android:textSize="12sp"
	           android:textColor="#5E5E5E" />
	        
	    </LinearLayout>
        
    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/ratingGroup"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".2" >
    
        <TextView android:id="@+id/ratingBarText"
	        android:text="@string/ratingBar"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="15dp"
	        android:textSize="20sp"
	        android:textColor="#FFFFFF" />
	    
	    <SeekBar android:id="@+id/ratingBar"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/ratingBarText"
	        android:max="4"
	        android:layout_marginLeft="15dp"
            android:layout_marginTop="6dp"
            android:layout_marginRight="15dp"
	        android:progressDrawable="@xml/progress_drawable"
	        android:thumb="@xml/slider_drawable"
	        android:thumbOffset="0dp"  />
	    
	    <TextView android:id="@+id/ratingBarCurrent"
	        android:layout_width="wrap_content"
            android:layout_marginRight="15dp"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:layout_alignBottom="@id/ratingBarText"
	        android:gravity="right"
	        android:textAlignment="textEnd"
	        android:textSize="15sp"
	        android:textColor="#FFFFFF" />
	    
	    <LinearLayout
	       android:id="@+id/ratingScale"
	       android:layout_width="fill_parent"
	       android:layout_height="wrap_content"
	       android:layout_below="@id/ratingBar"
	       android:orientation="horizontal"
	       android:weightSum="5" >
	        
	       <TextView
	           android:layout_width="0dp"
	           android:layout_height="wrap_content"
	           android:layout_weight="1"
	           android:gravity="center_horizontal"
	           android:text="1"
	           android:textSize="12sp"
	           android:textColor="#5E5E5E" />
	       
	       <TextView
	           android:layout_width="0dp"
	           android:layout_height="wrap_content"
	           android:layout_weight="1"
	           android:gravity="center_horizontal"
	           android:text="2"
	           android:textSize="12sp"
	           android:textColor="#5E5E5E" />
	       
	       <TextView
	           android:layout_width="0dp"
	           android:layout_height="wrap_content"
	           android:layout_weight="1"
	           android:gravity="center_horizontal"
	           android:text="3"
	           android:textSize="12sp"
	           android:textColor="#5E5E5E" />
	       
	       <TextView
	           android:layout_width="0dp"
	           android:layout_height="wrap_content"
	           android:layout_weight="1"
	           android:gravity="center_horizontal"
	           android:text="4"
	           android:textSize="12sp"
	           android:textColor="#5E5E5E" />
	       
	       <TextView
	           android:layout_width="0dp"
	           android:layout_height="wrap_content"
	           android:layout_weight="1"
	           android:gravity="center_horizontal"
	           android:text="5"
	           android:textSize="12sp"
	           android:textColor="#5E5E5E" />
	        
	    </LinearLayout>
        
    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/timeGroup"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".2" >
	    
        <TextView android:id="@+id/timeBarText"
	        android:text="@string/timeBar"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="15dp"
	        android:layout_marginRight="15dp"
	        android:textSize="20sp"
	        android:textColor="#FFFFFF" />
	    
	    <SeekBar android:id="@+id/timeBar"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/timeBarText"
	        android:max="24"
	        android:layout_marginLeft="15dp"
            android:layout_marginTop="6dp"
            android:layout_marginRight="15dp"
	        android:progressDrawable="@xml/progress_drawable"
	        android:thumb="@xml/slider_drawable"
	        android:thumbOffset="0dp" />
	
	    <TextView android:id="@+id/timeBarCurrent"
	        android:layout_width="wrap_content"
	        android:layout_marginRight="15dp"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:layout_alignBottom="@id/timeBarText"
	        android:gravity="right"
	        android:textAlignment="textEnd"
	        android:textSize="15sp"
	        android:textColor="#FFFFFF" />
	    
	    <LinearLayout
	       android:id="@+id/timeScale"
	       android:layout_width="fill_parent"
	       android:layout_height="wrap_content"
	       android:layout_below="@id/timeBar"
	       android:orientation="horizontal"
	       android:weightSum="4" >
	        
	       <TextView
	           android:layout_width="0dp"
	           android:layout_height="wrap_content"
	           android:layout_weight="1"
	           android:gravity="center_horizontal"
	           android:text="0hrs"
	           android:textSize="12sp"
	           android:textColor="#5E5E5E" />
	       
	       <TextView
	           android:layout_width="0dp"
	           android:layout_height="wrap_content"
	           android:layout_weight="1"
	           android:gravity="center_horizontal"
	           android:text="8hrs"
	           android:textSize="12sp"
	           android:textColor="#5E5E5E" />
	       
	       <TextView
	           android:layout_width="0dp"
	           android:layout_height="wrap_content"
	           android:layout_weight="1"
	           android:gravity="center_horizontal"
	           android:text="16hrs"
	           android:textSize="12sp"
	           android:textColor="#5E5E5E" />
	       
	       <TextView
	           android:layout_width="0dp"
	           android:layout_height="wrap_content"
	           android:layout_weight="1"
	           android:gravity="center_horizontal"
	           android:text="24hrs"
	           android:textSize="12sp"
	           android:textColor="#5E5E5E" />
	        
	    </LinearLayout>
        
    </RelativeLayout>
    
    <LinearLayout
        android:id="@+id/prefButtons"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".2"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        style="?android:attr/buttonBarButtonStyle" >
        
        <Button
            android:id="@+id/applyPrefs"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/applyPrefs"
            android:background="@drawable/arrowbutton"
            android:textColor="#000000"
            android:layout_gravity="bottom"
            style="?android:attr/buttonBarStyle" />
	    
	    <!--Button
	        android:id="@+id/advancedPrefs"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight=".5"
	        android:textSize="12dp"
	        android:text="@string/advancedPrefs"
	        android:textColor="#FFFFFF" /-->
        
    </LinearLayout>
    

</LinearLayout>
