<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#FAFFF5"
                android:endColor="#FAFFF5"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="#101010" />
            <padding
                android:left="2dp"
                android:top="2dp"
                android:right="2dp"
                android:bottom="2dp" />
        </shape>
    </item>
    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="#FAFFF5"
                android:startColor="#FAFFF5"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="#101010" />
            <!--corners
                android:radius="3dp" /-->
            <padding
                android:left="2dp"
                android:top="2dp"
                android:right="2dp"
                android:bottom="2dp" />
        </shape>
    </item>
    <item>        
        <shape>
            <gradient
                android:endColor="#EBFFD7"
                android:startColor="#EBFFD7"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="#101010" />
            <!--corners
                android:radius="3dp" /-->
            <padding
                android:left="2dp"
                android:top="2dp"
                android:right="2dp"
                android:bottom="2dp" />
        </shape>
    </item>

</selector>
